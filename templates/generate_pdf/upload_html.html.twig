{% extends 'base.html.twig' %}

{% block title %}Générer un PDF à partir d'un fichier HTML{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center">Générer un PDF depuis un fichier HTML</h2>

        <div class="card shadow-lg p-4">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <div class="mb-3">
                {{ form_label(form.htmlFile, 'Télécharger un fichier HTML:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.htmlFile, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-file-pdf"></i> Générer le PDF
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
