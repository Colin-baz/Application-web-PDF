{% extends 'base.html.twig' %}

{% block title %}Voir le PDF{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Voici votre PDF généré</h2>

                        <div class="text-center">
                            <iframe src="{{ asset(pdfFilePath) }}" width="100%" height="600px"></iframe>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ asset(pdfFilePath) }}" class="btn btn-success" download>
                                <i class="fas fa-download"></i> Télécharger le PDF
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
