{% extends 'base.html.twig' %}

{% block title %}Voir le PDF{% endblock %}

{% block body %}
    <div class="see-container mt-5 text-center">
        <h2 class="mb-4" style="color: #8A2BE2;">Voici votre PDF généré</h2>

        <div class="mb-4">
            <iframe src="{{ asset(pdfFilePath) }}" width="100%" height="600px"></iframe>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('homepage') }}" class="btn-custom">
                Retour
            </a>
            <a href="{{ asset(pdfFilePath) }}" class="btn-custom" download>
                <i class="fas fa-download"></i> Télécharger le PDF
            </a>
        </div>
    </div>

    <style>
        .btn-custom {
            background-color: #8A2BE2;
            color: white;
            border: 2px solid #8A2BE2;
            padding: 10px 15px;
            margin: 0 10px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-custom:hover {
            background-color: white;
            color: #8A2BE2;
            border: 2px solid #8A2BE2;
        }

        .see-container {
            width: 90%;
            max-width: 800px;
            margin: 0 auto;
        }

        iframe {
            border: none;
        }
    </style>
{% endblock %}
