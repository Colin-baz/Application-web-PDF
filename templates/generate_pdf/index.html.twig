{% extends 'base.html.twig' %}

{% block title %}Générer un PDF{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Générer un PDF à partir d'une URL</h2>

                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.url, 'Entrer un URL:', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.url, {'attr': {'class': 'form-control', 'placeholder': 'https://example.com'}}) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-file-pdf"></i> Generate PDF
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                {% if pdfContent is defined %}
                    <div class="text-center mt-4">
                        <h2>Generated PDF</h2>
                        <a href="{{ path('pdf_generate', {url: form.vars.data.url}) }}"
                           target="_blank"
                           class="btn btn-success">
                            <i class="fas fa-eye"></i> View PDF
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}