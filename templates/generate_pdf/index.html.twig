{% extends 'base.html.twig' %}

{% block title %}Générer un PDF à partir d'une URL{% endblock %}

{% block body %}
    <div class="url-container mt-5 text-center">
        <h2 class="mb-4" style="color: #8A2BE2;">Générer un PDF à partir d'une URL</h2>

        <div class="mb-3">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_label(form.url, 'Entrer une URL:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.url, {'attr': {'class': 'form-control', 'placeholder': 'https://exemple.com'}}) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn-custom mt-3">
                    <i class="fas fa-file-pdf"></i> Générer le PDF
                </button>
            </div>
            {% for message in app.flashes('error') %}
                <p class="text-danger text-center mt-3">{{ message }}</p>
            {% endfor %}
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .btn-custom {
            background-color: #8A2BE2;
            color: white;
            border: 2px solid #8A2BE2;
            padding: 10px 15px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-custom:hover {
            background-color: white;
            color: #8A2BE2;
            border: 2px solid #8A2BE2;
        }

        .url-container {
            width: 80%;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: bold;
        }
    </style>
{% endblock %}
