{% extends 'base.html.twig' %}

{% block title %}Historique des PDFs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Historique des PDFs générés</h2>

        {% if files is empty %}
            <p>Aucun PDF généré pour l'instant.</p>
        {% else %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nom du fichier</th>
                    <th>Date de création</th>
                    <th>Consulter ou télécharger</th>
                </tr>
                </thead>
                <tbody>
                {% for file in files %}
                    <tr>
                        <td>{{ file.name }}</td>
                        <td>{{ file.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('history_view', { id: file.id }) }}" class="btn btn-primary btn-sm">
                                Voir
                            </a>
                            <a href="{{ path('history_download', { id: file.id }) }}" class="btn btn-success btn-sm">
                                Télécharger
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
